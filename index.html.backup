        // Traiter les donn√©es de l'arborescence principale
        function processPrincipalData(rows) {
            let currentDomaine = '';
            let currentFiche = '';
            let seenCodes = new Set();

            rows.forEach((row, index) => {
                if (index < 4) return;

                const codeDomaine = row[0] || '';
                const codeSous = row[1] || '';
                const codeFiche = row[2] || '';
                const libelle = row[3] || '';
                const codeOGR = row[4] ? String(row[4]).trim() : '';

                if (codeDomaine && !codeSous && !codeFiche && libelle) {
                    currentDomaine = codeDomaine;
                    if (!romeData.domaines.has(codeDomaine)) {
                        romeData.domaines.set(codeDomaine, {
                            code: codeDomaine,
                            libelle: libelle,
                            count: 0
                        });
                    }
                }

                if (codeOGR && libelle) {
                    const key = `${libelle}|${codeOGR}`;
                    if (!seenCodes.has(key)) {
                        seenCodes.add(key);
                        romeData.metiers.push({
                            libelle: libelle,
                            codeOGR: codeOGR,
                            codeFiche: codeFiche,
                            domaine: codeDomaine
                        });
                        if (codeFiche) romeData.fiches.add(codeFiche);
                        if (codeDomaine && romeData.domaines.has(codeDomaine)) {
                            romeData.domaines.get(codeDomaine).count++;
                        }
                    }
                }
            });
        }

        // Traiter les donn√©es des centres d'int√©r√™t
        function processCentresData(rows) {
            let currentCentre = null;

            rows.forEach((row, index) => {
                if (index < 1) return;

                const colA = row[0] || '';
                const colB = row[1] || '';
                const colC = row[2] || '';

                if (colB && !colA && colB.includes('J\'')) {
                    if (currentCentre) romeData.centresInteret.push(currentCentre);
                    currentCentre = {
                        libelle: colB,
                        description: colC || '',
                        codesRome: []
                    };
                } else if (colA && colA.trim() !== '' && currentCentre) {
                    currentCentre.codesRome.push(colA.trim());
                }
            });
            if (currentCentre) romeData.centresInteret.push(currentCentre);
        }

