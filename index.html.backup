                    if (centre && centre.codesRome) centre.codesRome.forEach(code => codesFromCentres.add(code));
                });
                if (codesFromCentres.size > 0) {
                    results = results.filter(m => codesFromCentres.has(m.codeFiche) || codesFromCentres.has(m.codeOGR));
                }
            }
            
            displayResults(results.slice(0, 20));
        }

