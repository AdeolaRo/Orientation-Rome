    <script>
        // ==================== CODE JAVASCRIPT PRINCIPAL ====================
        document.addEventListener('DOMContentLoaded', function() {
            initApp();
        });

        // Variables globales
        let romeData = {
            metiers: [],
            fiches: new Set(),
            domaines: new Map(),
            centresInteret: []
        };
        let centreInteretMap = new Map();

        // Timeout pour √©viter le chargement infini
        const LOAD_TIMEOUT = 10000; // 10 secondes

        // Initialisation
        async function initApp() {
          
            
            // Timeout de s√©curit√©
            const timeoutId = setTimeout(() => {
                console.warn('Timeout de chargement d√©pass√©, utilisation des donn√©es de secours');
                loadFallbackData();
                updateUI();
                showAlert('Chargement des donn√©es en mode d√©grad√©', 'warning');
            }, LOAD_TIMEOUT);
            
            try {
                await loadRomeData();
                clearTimeout(timeoutId);
                updateUI();
                setupNavigation();
                setupEvents();
                document.getElementById('updateDate').textContent = new Date().toLocaleDateString('fr-FR');
               } catch (error) {
                clearTimeout(timeoutId);
                console.error('Erreur chargement:', error);
                loadFallbackData();
                updateUI();
                showAlert('Erreur lors du chargement des donn√©es - Mode d√©grad√© activ√©', 'danger');
            }
        }

        // Charger les donn√©es ROME
        async function loadRomeData() {
            // Chemins vers les fichiers (s'assurer qu'ils sont corrects)
            const basePath = 'data/';
            const filePathPrincipale = basePath + 'ROME_arbo_principale_2025.xlsx';
            const filePathCentres = basePath + 'ROME_arbo_centres_2025.xlsx';
            
            console.log('Tentative de chargement:', filePathPrincipale, filePathCentres);
            
            try {
                const [bufferPrincipale, bufferCentres] = await Promise.all([
                    fetch(filePathPrincipale).then(res => {
                        if (!res.ok) throw new Error(`Fichier principal non trouv√© (${res.status})`);
                        return res.arrayBuffer();
                    }),
                    fetch(filePathCentres).then(res => {
                        if (!res.ok) throw new Error(`Fichier centres non trouv√© (${res.status})`);
                        return res.arrayBuffer();
                    })
                ]);
                
                // Traiter le fichier principal
                const workbookPrincipal = XLSX.read(bufferPrincipale, { type: 'array' });
                const sheetNamePrincipal = 'Arbo Principale 18-09-2025';
                const sheetPrincipal = workbookPrincipal.Sheets[sheetNamePrincipal];
                if (!sheetPrincipal) throw new Error('Feuille Arbo Principale non trouv√©e');
                
                const rowsPrincipal = XLSX.utils.sheet_to_json(sheetPrincipal, { header: 1 });
                processPrincipalData(rowsPrincipal);

                // Traiter le fichier des centres d'int√©r√™t
                const workbookCentres = XLSX.read(bufferCentres, { type: 'array' });
                const sheetNameCentres = 'Centre d\'int√©r√™t 09-2025';
                const sheetCentres = workbookCentres.Sheets[sheetNameCentres];
                if (!sheetCentres) throw new Error('Feuille Centre d\'int√©r√™t non trouv√©e');
                
                const rowsCentres = XLSX.utils.sheet_to_json(sheetCentres, { header: 1 });
                processCentresData(rowsCentres);

                console.log('Affichage des r√©sultats...');
                
                // Fonction d'√©chappement HTML simple
                function escapeHtml(text) {
                    if (!text) return '';
                    const div = document.createElement('div');
                    div.textContent = text;
                    return div.innerHTML;
                }
                
                resultsContainer.innerHTML = `
                    <div class="result-header">
                        <h2>üéØ R√©sultat de votre simulation</h2>
                        <h3>${escapeHtml(mainResult)}</h3>
                        <p>${escapeHtml(mainDetails)}</p>
                    </div>
                    
                    <h3 style="margin-top: 2rem;">üìã D√©tails de votre simulation</h3>
                    ${resultBoxes.map(box => `
                        <div class="${box.type}-box">
                            <h4>${escapeHtml(box.message)}</h4>
                            <p>${escapeHtml(box.details)}</p>
                        </div>
                    `).join('')}
                    
                    ${detailsSections.length > 0 ? '<h3 style="margin-top: 2rem;">üìö Informations d√©taill√©es</h3>' : ''}
                    ${detailsSections.map(section => `
                        <div style="margin: 1.5rem 0;">
                            <h3 style="color: var(--primary-color); margin-bottom: 1rem;">${escapeHtml(section.title)}</h3>
                            <div class="info-box" style="margin-top: 0;">
                                ${section.content}
                            </div>
