        // Recherche de m√©tiers
        function searchMetiers() {
            const searchTerm = document.getElementById('searchMetier').value.toLowerCase();
            const domaine = document.getElementById('domaineFilter').value;
            const codeRome = document.getElementById('codeRome').value;
            const centresSelection = Array.from(document.getElementById('centreInteret').selectedOptions).map(o => o.value);
            
            let results = [...romeData.metiers];
            
            if (searchTerm) results = results.filter(m => m.libelle.toLowerCase().includes(searchTerm));
            if (codeRome) results = results.filter(m => m.codeOGR && m.codeOGR.toString().includes(codeRome));
            if (domaine) results = results.filter(m => m.domaine === domaine);
            
            if (centresSelection.length > 0) {
                const codesFromCentres = new Set();
                centresSelection.forEach(centreLib => {
